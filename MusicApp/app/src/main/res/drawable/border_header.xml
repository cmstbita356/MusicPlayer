<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#222222"/>
        </shape>
    </item>
    <!-- Shadow -->
    <item android:bottom="8dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#222222"
                android:startColor="#00000000"/>
        </shape>
    </item>
</layer-list>
